<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/date_content"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/day_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListItemDate"
            android:text="31" />

        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_number"
            style="@style/ListItemMonth"
            android:text="Nov" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:layout_toRightOf="@+id/date_content">

        <TextView
            android:id="@+id/item_title"
            style="@style/ListItemTitle"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Adrian Guillermo Martinez Rosas" />

        <TextView
            android:id="@+id/item_subtitle"
            style="@style/ListItemSubtitle"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/item_title"
            android:text="58 aÃ±os - Wilde" />


        <TextView
            android:id="@+id/item_info"
            style="@style/ListItemInfo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/item_subtitle"
            android:text="2 dias" />


        <TextView
            android:id="@+id/item_separator"
            style="@style/ListItemSeparator"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_alignLeft="@+id/item_title"
            android:layout_below="@+id/item_info" />

    </RelativeLayout>
</RelativeLayout>