<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawable_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/menu_header_box"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_header_box_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/menu_item_prospective_clients_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menu_header_txt"
            android:layout_marginLeft="@dimen/activity_vertical_half_margin"
            android:layout_marginBottom="@dimen/activity_vertical_half_margin"
            android:src="@drawable/ic_user" />


        <TextView
            android:id="@+id/menu_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="@string/menu_header"
            android:layout_above="@+id/menu_version_txt"
            android:textAppearance="@style/MenuHeaderTitle" />

        <TextView
            android:id="@+id/menu_version_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/activity_vertical_half_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_half_margin"
            android:text="@string/version_number"
            android:textSize="14sp"
            android:textAppearance="@style/MenuHeaderTitle" />




    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menu_header_box"></ScrollView>
</RelativeLayout>
