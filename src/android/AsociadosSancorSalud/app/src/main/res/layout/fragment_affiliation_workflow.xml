<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scroll"
        style="@style/ScrollAppearence">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="@string/verif_auth_promotion_title"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/auth_promotion_wrapper"
                    style="@style/TextAppearence.TextInputLayout">

                    <EditText
                        android:id="@+id/auth_promotion_input"
                        style="@style/TextAppearence.EditText"
                        android:focusable="false"
                        android:hint="Estado" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/auth_promotion_button"
                style="@style/ButtonAppearence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/button_background_accent"
                android:text="@string/verif_auth_promotion_action"
                android:layout_marginBottom="@dimen/activity_vertical_double_margin"
                android:visibility="gone"
                android:textSize="@dimen/app_button_txt_size" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_double_margin"
                android:text="@string/verif_auth_cobranza_title"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/auth_cobranza_wrapper"
                    style="@style/TextAppearence.TextInputLayout">

                    <EditText
                        android:id="@+id/auth_cobranza_input"
                        style="@style/TextAppearence.EditText"
                        android:focusable="false"
                        android:hint="Estado" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/auth_cobranza_button"
                style="@style/ButtonAppearence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/button_background_accent"
                android:text="@string/verif_auth_cobranza_action"
                android:visibility="gone"
                android:textSize="@dimen/app_button_txt_size" />


            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"></View>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>