<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/item_title"
        style="@style/ListItemTitle"
        android:layout_toLeftOf="@+id/accesory"
        android:text="Reynaldo Sietecase" />

    <TextView
        android:id="@+id/item_subtitle"
        style="@style/ListItemSubtitle"
        android:layout_toLeftOf="@+id/accesory"
        android:layout_below="@+id/item_title"
        android:text="58 aÃ±os - Wilde" />


    <TextView
        android:id="@+id/item_separator"
        style="@style/ListItemSeparator"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_subtitle" />

    <ImageView
        android:id="@+id/item_icon"
        style="@style/ListItemIcon"
        android:src="@drawable/ic_no_checked" />


    <LinearLayout
        android:id="@+id/accesory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pendings"
            style="@style/ListItemAccesoryText"
            android:text="0"
            android:textColor="@color/colorRed" />

        <TextView
            style="@style/ListItemAccesoryText"
            android:text=" - " />

        <TextView
            android:id="@+id/item_total"
            style="@style/ListItemAccesoryText"
            android:text="0"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</RelativeLayout>