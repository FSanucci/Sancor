<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNoDataBackground">

    <TextView
        style="@style/NoDataTitle"
        android:text="@string/no_data"
        android:id="@+id/no_data_title" />

    <TextView
        android:id="@+id/no_data_retry"
        android:text="@string/retry"
        android:layout_below="@+id/no_data_title"
        style="@style/NoDataButton" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/NoDataIcon"
        android:layout_above="@+id/no_data_title"
        app:srcCompat="@drawable/ic_no_data"/>

</RelativeLayout>