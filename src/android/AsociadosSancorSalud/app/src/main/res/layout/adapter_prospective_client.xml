<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/item_title"
        style="@style/ListItemTitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Adrian Guillermo Martinez Rosas"
        android:layout_toStartOf="@+id/item_link_icon"
        android:layout_toRightOf="@+id/item_link_icon"/>

    <TextView
        android:id="@+id/item_subtitle"
        style="@style/ListItemSubtitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/item_right_icon"
        android:layout_below="@+id/item_title"
        android:text="58 aÃ±os - Wilde" />

    <TextView
        android:id="@+id/item_status"
        style="@style/ListItemStatus"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_subtitle"
        android:text="nuevo - " />

    <TextView
        android:id="@+id/item_info"
        style="@style/ListItemInfo"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/item_status"
        android:layout_toLeftOf="@+id/item_right_icon"
        android:layout_below="@+id/item_subtitle"
        android:text="2 dias" />


    <TextView
        android:id="@+id/item_separator"
        style="@style/ListItemSeparator"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_info" />


    <ImageView
        android:id="@+id/item_link_icon"
        style="@style/ListItemAccesoryIcon"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/item_icon"
        android:visibility="gone"
        android:src="@drawable/ic_flag"
        android:tint="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/item_icon"
        style="@style/ListItemAccesoryIcon"
        android:layout_marginLeft="0dp"
        android:src="@drawable/ic_flag"
        android:tint="@color/colorPrimary"/>



</RelativeLayout>