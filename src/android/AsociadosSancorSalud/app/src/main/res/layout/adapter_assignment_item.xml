<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/item_icon"
        style="@style/ListItemIcon"
        android:src="@drawable/ic_no_checked" />

    <RelativeLayout
        android:id="@+id/item_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_icon">

    <ImageView
        android:id="@+id/item_right_icon"
        style="@style/ListItemAccesoryIcon"
        android:src="@drawable/ic_flag" />

    <TextView
        android:id="@+id/item_title"
        style="@style/ListItemTitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Adrian Guillermo Martinez Rosas"
        android:layout_toLeftOf="@+id/item_right_icon"
        android:layout_toStartOf="@+id/item_right_icon" />

    <TextView
        android:id="@+id/item_subtitle"
        style="@style/ListItemSubtitle"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/item_right_icon"
        android:layout_below="@+id/item_title"
        android:text="58 aÃ±os - Wilde" />

    <TextView
        android:id="@+id/item_info"
        style="@style/ListItemInfo"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@+id/item_right_icon"
        android:layout_below="@+id/item_subtitle"
        android:text="2 dias" />


    <TextView
        android:id="@+id/item_separator"
        style="@style/ListItemSeparator"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_info" />


    </RelativeLayout>



</RelativeLayout>