<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/item_title"
        style="@style/ListItemTitle"
        android:layout_toLeftOf="@+id/accesory"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Reynaldo Sietecase" />

    <TextView
        android:id="@+id/item_subtitle"
        style="@style/ListItemSubtitle"
        android:layout_toLeftOf="@+id/accesory"
        android:layout_below="@+id/item_title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Avellaneda" />


    <TextView
        android:id="@+id/item_separator"
        style="@style/ListItemSeparator"
        android:layout_alignLeft="@+id/item_title"
        android:layout_below="@+id/item_subtitle" />


    <TextView
        android:id="@+id/badge_total_manual_quote"
        style="@style/Menu.Badge.Red"
        android:layout_toLeftOf="@+id/item_title"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="0"
        android:visibility="visible"/>

</RelativeLayout>